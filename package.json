{
  "name": "vandy-scheduler",
  "repository": "github:quinton22/VandyScheduler",
  "engines": {
    "node": ">=18"
  },
  "targets": {
    "content_scripts": {
      "source": "src/content_scripts/index.ts",
      "includeNodeModules": true
    },
    "service_worker": {
      "source": "src/service_worker/background.js",
      "outputFormat": "esmodule"
    }
  },
  "scripts": {
    "build": "parcel build",
    "lint": "eslint",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/chrome": "^0.0.241",
    "@types/jquery": "^3.5.18",
    "eslint": "^8.48.0",
    "parcel": "^2.9.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "jquery": "^3.7.0"
  }
}
