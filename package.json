{
  "name": "vandy-scheduler",
  "repository": "github:quinton22/VandyScheduler",
  "engines": {
    "node": ">=18"
  },
  "targets": {
    "content_scripts": {
      "source": "src/content_scripts/index.ts",
      "includeNodeModules": true
    },
    "service_worker": {
      "source": "src/service_worker/background.ts",
      "includeNodeModules": true,
      "outputFormat": "esmodule"
    }
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "delay": 1500,
    "ext": "ts,js,mjs,cjs,json"
  },
  "scripts": {
    "start:watch": "nodemon",
    "start": "parcel build",
    "build": "parcel build",
    "lint": "eslint ./src",
    "typecheck": "tsc --noEmit --excludeDirectories node_modules"
  },
  "devDependencies": {
    "@babel/core": "^7.12.0",
    "@eslint/js": "^9.4.0",
    "@parcel/config-default": "^2.12.0",
    "@parcel/transformer-typescript-tsc": "^2.12.0",
    "@tsconfig/recommended": "^1.0.2",
    "@types/chrome": "^0.0.241",
    "@types/jquery": "^3.5.18",
    "eslint": "^9.4.0",
    "globals": "^15.4.0",
    "nodemon": "^3.1.3",
    "parcel": "^2.12.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.13.0"
  },
  "dependencies": {
    "jquery": "^3.7.0",
    "string-similarity-js": "^2.1.4"
  }
}
